def days_to_weeks(days):
    try:
        days = int(days)
        weeks = days // 7
        print(f"{days} days is approximately {weeks} weeks.")
    except ValueError:
        print("Error: Input is not an integer.")
    finally:
        print("Program executed.")

days = input("Enter the number of days: ")

days_to_weeks(days)
